<%= form_for(customer) do |f| %>
  <% if customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, 'Nome do Cliente' %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :cpf %>
    <%= f.text_field :cpf %>
  </div>

  <div class="field">
    <%= f.label :phone, 'Telefone' %>
    <%= f.text_field :phone %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
<strong>Endereço Principal:</strong>
  <div class="field">
    <%= f.label :zip, 'Cep' %>
    <%= f.text_field :zip %>
  </div>

  <div class="field">
    <%= f.label :city, 'Cidade' %>
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :state, 'Estado' %>
    <%= f.text_field :state %>
  </div>

  <div class="field">
    <%= f.label :borough, 'Bairro' %>
    <%= f.text_field :borough %>
  </div>

  <div class="field">
    <%= f.label :street, 'Rua' %>
    <%= f.text_field :street %>
  </div>

  <div class="field">
    <%= f.label :number, 'Número' %>
    <%= f.text_field :number %>
  </div>

  <div class="field">
    <%= f.label :comp, 'Complemento' %>
    <%= f.text_field :comp %>
  </div>

  <div class="field">
    <%= f.label :type, 'Tipo' %>
    <%= f.text_field :type %>
  </div>

  <Strong>Favor Adicionar os endereços secundários</Strong>

  <table>
    <tbody>
    <%= f.fields_for :address do |ff|%>
      <th class="field">
        <%= ff.label :ziptwo, 'Cep' %>
        <%= ff.text_field :ziptwo %>
      </th>

      <th class="field">
        <%= ff.label :citytwo, 'Cidade' %>
        <%= ff.text_field :citytwo %>
      </th>

      <th class="field">
        <%= ff.label :statetwo, 'Estado' %>
        <%= ff.text_field :statetwo %>
      </th>

      <th class="field">
        <%= ff.label :boroughtwo, 'Bairro' %>
        <%= ff.text_field :boroughtwo %>
      </th>

      <th class="field">
        <%= ff.label :streettwo, 'Rua' %>
        <%= ff.text_field :streettwo %>
      </th>

      <th class="field">
        <%= ff.label :numbertwo, 'Número' %>
        <%= ff.text_field :numbertwo %>
      </th>

      <th class="field">
        <%= ff.label :comptwo, 'Complemento' %>
        <%= ff.text_field :comptwo %>
      </th>
    <%end %>
    </tbody>
  </table>


  <div class="actions">
    <%= f.submit 'Criar Cliente' %>
  </div>
<% end %>
